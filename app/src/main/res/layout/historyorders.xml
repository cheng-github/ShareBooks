<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="0dp"
    android:elevation="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/cv_history"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_bookimage"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="100dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="平凡的世界"
            android:layout_marginBottom="2dp"
            />
        <TextView
            tools:text = "路遥"
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:id="@+id/tv_pressversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="?android:textColorSecondary"
            tools:text="人民大学出版社/2010年11月第3版"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorSecondary"
            tools:text="交易对象:2132131"
            android:textSize="12sp"
            android:layout_marginBottom="2dp"
            android:id="@+id/tv_name"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorSecondary"
                tools:text="下单日期:2019-02-11 00:00:00"
                android:textSize="12sp"
                android:layout_marginBottom="2dp"
                android:id="@+id/tv_orderdate"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:textColorSecondary"
                tools:text="完成日期:2019-02-15 00:00:00"
                android:textSize="12sp"
                android:layout_marginBottom="2dp"
                android:id="@+id/tv_finishdate"
                />
    </LinearLayout>
</android.support.v7.widget.CardView>