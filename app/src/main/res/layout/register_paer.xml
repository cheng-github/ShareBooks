<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.activity.LoginActivity"
    >
        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="500dp"
            app:cardBackgroundColor="#eeeeee"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp">
                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:background="#795548"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_centerInParent="true"
                        android:text="@string/register"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="#795548"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="50dp"
                    >
                        <android.support.design.widget.TextInputLayout
                            android:textColorHint="#c5c5c5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/username"
                            android:textColor="#795548"
                            android:id="@+id/userName"
                            android:textSize="16sp"
                            android:background="@drawable/selector_bg_edit_2"
                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                            android:inputType="textPersonName"
                            android:paddingBottom="2dp"
                            />
                        </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="#c5c5c5">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/passWord1"
                            android:textColor="#795548"
                            android:textSize="16sp"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:background="@drawable/selector_bg_edit_2"
                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                            android:paddingBottom="3dp"
                            />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColorHint="#c5c5c5">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/passWord2"
                            android:textColor="#795548"
                            android:textSize="16sp"
                            android:hint="@string/ensurePassWord"
                            android:inputType="textPassword"
                            android:background="@drawable/selector_bg_edit_2"
                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                            android:paddingBottom="3dp"
                            />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColorHint="#c5c5c5">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/nickName"
                            android:textColor="#795548"
                            android:textSize="16sp"
                            android:hint="@string/nickName"
                            android:inputType="textPersonName"
                            android:background="@drawable/selector_bg_edit_2"
                            android:textCursorDrawable="@drawable/bg_input_cursor_2"
                            android:paddingBottom="3dp"
                            />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bt_shape"
                    android:text="@string/register"
                    android:textColor="#d3d3d3"
                    android:id="@+id/ensure"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp"
                    android:text="@string/registerInfo"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab2"
            app:fabSize="normal"
            android:src="@drawable/plus_x"
            android:layout_alignTop="@+id/card_view2"
            android:layout_marginEnd="-20dp"
            android:layout_marginTop="25dp"
            android:layout_alignEnd="@+id/card_view2"
            app:backgroundTint="#795548" />

</RelativeLayout>