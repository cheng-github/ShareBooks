<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_card"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:clickable="true"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            >
            <ImageView
                android:id="@+id/bookImage"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                />
            <LinearLayout
                android:layout_toRightOf="@+id/bookImage"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/bookName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="我是书籍名称" />
                <TextView
                    tools:text="作者/我是出版社/版本号...........................作者/我是出版社/版本号..........................."
                    android:id="@+id/tv_authorpressversion"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/s_donater"
                        android:layout_marginRight="3dp"
                        />
                    <TextView
                        android:id="@+id/tv_nickName"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="dwoadjad"
                        />
                    <ImageView
                        android:layout_marginStart="4dp"
                        android:id="@+id/iv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@drawable/male"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/bookDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:letterSpacing="0.02"
                    tools:text="我是书籍描述我是书籍描述我是书籍描述我是书籍描述我是书籍描述我是书籍描述我是书籍描述我是书籍描述我是书籍描述我是书籍描述我是书籍描述我是书籍描述"
                    />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="110dp"
        android:layout_height="145dp"
        android:id="@+id/bt_order"
        android:textSize="18sp"
        android:textColor="@color/color_white"
        android:background="@color/material_blue_500"
        android:text="@string/s_orderbook"
        android:textAlignment="center"
        />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
